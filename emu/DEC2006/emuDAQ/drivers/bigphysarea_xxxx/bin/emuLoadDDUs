/usr/bin/wall "Loading the DDU Gbit/BigPhys drivers"
sudo /sbin/ifdown eth2
sudo /sbin/ifdown eth3
sudo /sbin/rmmod dl2x
sudo /sbin/rmmod dl2k
sudo /sbin/rmmod eth_hook_2
sudo /sbin/rmmod eth_hook_3
sudo /sbin/insmod crc32
sudo /sbin/insmod $XDAQ_ROOT/emu/emuDAQ/drivers/bigphysarea_xxxx/eth_hook_mmap_v0_2/eth_hook_2.o
sudo /sbin/insmod $XDAQ_ROOT/emu/emuDAQ/drivers/bigphysarea_xxxx/eth_hook_mmap_v0_3/eth_hook_3.o            
sudo /sbin/insmod $XDAQ_ROOT/emu/emuDAQ/drivers/bigphysarea_xxxx/d550/dl2k.o jumbo=1,1 mtu=9000,9000 tx_flow=0 rx_flow=0 media=6,6
sudo /sbin/ifup eth2
sudo /sbin/ifup eth3
sudo /sbin/ifconfig eth2  -arp promisc
sudo /sbin/ifconfig eth3  -arp promisc
sudo /sbin/lsmod | /usr/bin/gawk '{if (NR==1) print} /eth_hook_/ {print}'
