<?xml version="1.0" encoding="UTF-8"?>
<xsl:transform xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
  version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:xlink="http://www.w3.org/1999/xlink/">

  <xsl:output method="html" encoding="UTF-8" indent="no"/>

  <xsl:template match="RUI">
    <tr>
      <td class="instance"><xsl:value-of select="@instance"/></td>
      <td><xsl:value-of select="@port"/></td>
      <td class="schar"><xsl:value-of select="@schar"/></td>
    </tr>
  </xsl:template>

  <xsl:template match="computer">
    <tr>
      <td><xsl:value-of select="@host"/></td>
      <td><xsl:value-of select="@alias"/></td>
      <td class="container">
	<table class="RUI" rules="all">
	  <xsl:apply-templates/>
	</table>
      </td>
    </tr>
  </xsl:template>

  <xsl:template match="RUI-to-computer_mapping">
    <html xmlns="http://www.w3.org/1999/xhtml">
      <head>
	<title>RUI-to-computer mapping of <xsl:value-of select="@date"/></title>
	<style>
	  table.computer { background-color: #2A3B90;  border-color: #2A3B90; border-collapse: separate; border-spacing: 1px 3px; }
	  table.computer td { background-color: #223388; text-align: center; padding: 0px 4px 0px 4px; color:#99BBFF; }
	  table.computer td.header { background-color: #112277; font-weight: bold; }
	  table.computer td.container { padding: 0px 0px 0px 0px; width: 12em; }
	  table.RUI { background-color: #2A3B90; width: 100%; border-color: #2A3B90; }
	  table.RUI td { background-color: #223388; text-align: center; padding: 0px 0px 0px 0px; color:#99BBFF; }
	  table.RUI td.header { background-color: #112277; font-weight: bold; }
	  table.RUI td.instance, td.schar { width: 30%; }
	</style>
      </head>
      <body>
	<table style="height: 100%; width: 100%; background-color: #222222;"><tr><td>
	  <table class="computer">
	    <tr>
	      <td class="header">host</td>
	      <td class="header">alias</td>
	      <td class="container">
		<table class="RUI" rules="cols">
		  <tr>
		    <td class="instance header">RUI</td>
		    <td class="header">port</td>
		    <td class="schar header">schar</td>
		  </tr>
		</table>
	      </td>
	    </tr>
	    <xsl:apply-templates/>
	  </table>
	</td></tr></table>
      </body>
    </html>
  </xsl:template>
  
</xsl:transform>
