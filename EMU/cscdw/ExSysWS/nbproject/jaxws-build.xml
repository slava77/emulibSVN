<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xalan="http://xml.apache.org/xslt" xmlns:ejbjarproject2="http://www.netbeans.org/ns/j2ee-ejbjarproject/2" xmlns:jaxws="http://www.netbeans.org/ns/jax-ws/1">
    <!--
                ===================
                JAX-WS WSGEN SECTION
                ===================
            -->
    <target name="wsgen-init" depends="init">
        <mkdir dir="${build.generated.dir}/wsgen/service"/>
        <mkdir dir="${build.generated.dir}/wsgen/service/resources/"/>
        <mkdir dir="${build.generated.dir}/wsgen/binaries"/>
        <taskdef name="wsgen" classname="com.sun.tools.ws.ant.WsGen">
            <classpath path="${j2ee.platform.wsgen.classpath}"/>
        </taskdef>
    </target>
    <target name="wsgen-compile" depends="wsgen-HttpProxyWS">
        <ejbjarproject2:javac srcdir="${build.generated.dir}/wsgen/service" classpath="${j2ee.platform.wsgen.classpath}:${javac.classpath}" destdir="${classes.dir}"/>
    </target>
    <target name="wsgen-HttpProxyWS" depends="wsgen-init, -do-compile">
        <wsgen destdir="${build.generated.dir}/wsgen/binaries" sourcedestdir="${build.generated.dir}/wsgen/service" resourcedestdir="${build.generated.dir}/wsgen/service/resources/" xendorsed="true" keep="false" genwsdl="true" sei="org.cern.cms.csc.exsys.ws.HttpProxyWS">
            <classpath path="${java.home}/../lib/tools.jar:${classes.dir}:${j2ee.platform.wsgen.classpath}:${javac.classpath}"/>
        </wsgen>
    </target>
    <!--
                ===================
                JAX-WS WSIMPORT SECTION
                ===================
            -->
    <target name="wsimport-init" depends="init">
        <mkdir dir="${build.generated.dir}/wsimport/service"/>
        <mkdir dir="${build.generated.dir}/wsimport/binaries"/>
        <mkdir dir="${classes.dir}"/>
        <taskdef name="wsimport" classname="com.sun.tools.ws.ant.WsImport">
            <classpath path="${j2ee.platform.wsimport.classpath}"/>
        </taskdef>
    </target>
    <target name="wsimport-service-check-EmuCountersProxyWS" depends="wsimport-init">
        <condition property="wsimport-service-EmuCountersProxyWS.notRequired">
            <available file="${build.generated.dir}/wsimport/service/ch/cern/cms/csc/exsys/wsdl/getEmuCountersService.java"/>
        </condition>
    </target>
    <target name="wsimport-service-EmuCountersProxyWS" depends="wsimport-init,wsimport-service-check-EmuCountersProxyWS" unless="wsimport-service-EmuCountersProxyWS.notRequired">
        <property name="service-wsdl-EmuCountersProxyWS" location="${meta.inf}/xml-resources/web-services/EmuCountersProxyWS/wsdl/getEmuCountersWrapper.wsdl"/>
        <wsimport sourcedestdir="${build.generated.dir}/wsimport/service" destdir="${build.generated.dir}/wsimport/binaries" wsdl="${service-wsdl-EmuCountersProxyWS}" catalog="catalog.xml" extension="true" verbose="true" xnocompile="true"/>
        <property name="targetLocation-EmuCountersProxyWS" location="${meta.inf}/wsdl/EmuCountersProxyWS"/>
        <property name="sourceLocation-EmuCountersProxyWS" location="${meta.inf}/xml-resources/web-services/EmuCountersProxyWS/wsdl/"/>
        <copy todir="${targetLocation-EmuCountersProxyWS}">
            <fileset dir="${sourceLocation-EmuCountersProxyWS}"/>
        </copy>
    </target>
    <target name="wsimport-service-clean-EmuCountersProxyWS" depends="-init-project">
        <delete dir="${build.generated.dir}/wsimport/service/ch/cern/cms/csc/exsys/wsdl"/>
    </target>
    <target name="wsimport-service-generate" depends="wsimport-init, wsimport-service-EmuCountersProxyWS"/>
    <target name="wsimport-service-compile" depends="wsimport-service-generate">
        <ejbjarproject2:javac srcdir="${build.generated.dir}/wsimport/service" classpath="${j2ee.platform.wsimport.classpath}:${javac.classpath}" destdir="${classes.dir}"/>
    </target>
</project>
