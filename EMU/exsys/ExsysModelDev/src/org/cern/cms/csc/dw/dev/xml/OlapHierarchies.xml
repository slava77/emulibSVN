<?xml version="1.0" encoding="UTF-8"?>

<Hierarchies>

    <Hierarchy name="ComponentLocation" table="CDW_OLAP$D_COMPS_BY_LOCATION">
        <Level name="Endcap">
            <ComponentClass name="Endcap"/>
            <Level name="Station">
                <ComponentClass name="Station"/>
                <ComponentLinkClass name="isIn"/>
                <Level name="Ring">
                    <ComponentClass name="Ring"/>
                    <ComponentLinkClass name="isIn"/>
                    <Level name="Chamber">
                        <ComponentClass name="Chamber"/>
                        <ComponentLinkClass name="isIn"/>
                        <Level name="Layer">
                            <ComponentClass name="Layer"/>
                            <ComponentLinkClass name="isIn"/>
                            <Level name="HvSegment">
                                <ComponentClass name="HVSegment"/>
                                <ComponentLinkClass name="isIn"/>
                            </Level>
                        </Level>
                    </Level>
                </Level>
            </Level>
        </Level>
    </Hierarchy>

    <Hierarchy name="ComponentType" table="CDW_OLAP$D_COMPS_BY_TYPE">
        <Level name="Class" column="CLASS">
            <Level name="Component" column="COMPONENT"/>
        </Level>
        <sql>
        select 
          CMP_ID, 
          CCL_NAME "CLASS", 
          CMP_NAME "COMPONENT"
        from 
          CDW_COMPONENTS 
          join CDW_COMPONENT_CLASSES 
            on (CMP_CCL_ID = CCL_ID)
        </sql>
    </Hierarchy>

    <Hierarchy name="ConclusionType" table="CDW_OLAP$D_CONCLUSION_TYPES">
        <Level name="TypeName" column="NAME"/>
        <sql>
        select 
          RECT_ID "CMP_ID", 
          RECT_NAME "NAME"
        from 
          RE_CONCLUSION_TYPES
        </sql>
    </Hierarchy>

</Hierarchies>
