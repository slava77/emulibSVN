"main()
{
  initParams();

  dyn_string ex;
  layoutParams = emuui_getMapping(\"chamberLayout\", ex);
  if (emu_checkException(ex)) { return; }
  
  // get connectionType and mode to determine wether gradient scale is necessary or not (and if so also determine min and max values for the gradient scale)  
  string connectionType, mode;
  dpGet(paramGroup + \".connectionType\", connectionType);
  dpGet(paramGroup + \".mode\", mode);
  
  // compute the size parameters
  float paramWidthFloat = paramWidth;
  chamberWidthHeight;
  if (strpos(connectionType, \"DP\") >= 0) { // gradient scale is necessary
    chamberWidthHeight = floor((paramWidthFloat - (float)EMUUI_EMUPLOT_LABEL_WIDTH - (float)EMUUI_EMUPLOT_GRADIENT_LABEL_WIDTH) / 37); // max 36 chambers + gradient scale
  } else { // gradient scale is NOT necessary
    chamberWidthHeight = floor((paramWidthFloat - (float)EMUUI_EMUPLOT_LABEL_WIDTH) / 36); // max 36 chambers
  }
  height = chamberWidthHeight * 17; // 17 rings
  
  int myPosX, myPosY;
  getValue(\"refPoint\", \"position\", myPosX, myPosY);
  
  drawEMU(myPosX, myPosY, chamberWidthHeight);
  
  if (strpos(connectionType, \"DP\") >= 0) { // gradient scale is necessary
    dyn_string ex;
    float minValue = emuui_getDpValueRangeMin(\"chamber_\" + mode, ex);
    if (dynlen(ex) > 0) { emu_errorHandled(ex); }
    float maxValue = emuui_getDpValueRangeMax(\"chamber_\" + mode, ex);
    if (dynlen(ex) > 0) { emu_errorHandled(ex); }

    gradientScaleX = myPosX + EMUUI_EMUPLOT_LABEL_WIDTH + (chamberWidthHeight * 36) + 1;
    gradientScaleY = myPosY + height;
    drawGradientScale(gradientScaleX, gradientScaleY, 
                      height + 1, chamberWidthHeight, 
                      minValue, maxValue);
  }
  
  if (strlen($group) > 0) {
    dpConnect(\"modeChangedCB\", false, $group + \".mode\", $group + \".connectionType\");
  }
}

void drawEMU(int x, int y, int chamberWidthHeight) {
  dyn_string ex;
  
  int currentY = y;
  for (int i=4; i >= -4; i--) {
    string side = \"P\";
    if (i < 0) { side = \"M\"; }
    if (i == 0) { continue; } // no such station
    int station = emu_abs(i);

    if (side == \"M\") { // count rings increasingly
      for (int ring = 1; ring <= layoutParams[\"ringCount_ME_\" + side + station]; ring++) {
        // check if chambersStart and chambersEnd parameters exist in layoutParams - if so then draw only chambers in that range    
        int chambersStart, chambersEnd;
        getChambersStartEndParams(side, station, ring, chambersStart, chambersEnd, ex);
        if (emu_checkException(ex)) { return; }
        // draw the ring
        drawStation(x, currentY, side, station, ring, chamberWidthHeight, chambersStart, chambersEnd);
        currentY += chamberWidthHeight;
      }
    } else { // count ring decresingly
      for (int ring = layoutParams[\"ringCount_ME_\" + side + station]; ring >= 1; ring--) {
        // check if chambersStart and chambersEnd parameters exist in layoutParams - if so then draw only chambers in that range    
        int chambersStart, chambersEnd;
        getChambersStartEndParams(side, station, ring, chambersStart, chambersEnd, ex);
        if (emu_checkException(ex)) { return; }
        // draw the ring
        drawStation(x, currentY, side, station, ring, chamberWidthHeight, chambersStart, chambersEnd);
        currentY += chamberWidthHeight;
      }
    }
  }
}

void drawStation(int x, int y, string side, int station, int ring, int chamberWidthHeight, int chambersStart = -1, int chambersEnd = -1) {
  int chamberCount = 36;
  int chamberWidth = chamberWidthHeight + 1; // for small chambers (add one to make the border 1 pixed in width between two chambers)
  int chamberHeight = chamberWidthHeight + 1; //add one to make the border 1 pixed in height between two chambers
  int xStep = chamberWidthHeight;
  
  if ((station > 1) && (ring == 1)) { // if those are big chambers then scale them twice in width
    chamberCount = 18;
    chamberWidth *= 2;
    xStep *= 2;
  }
  
  //draw ring label
  drawRingLabel(x, y, side, station, ring);
  x += EMUUI_EMUPLOT_LABEL_WIDTH;

  if ((chambersStart == -1) || (chambersEnd == -1)) { 
    chambersStart = 1;
    chambersEnd = chamberCount;
  }
  
  for (int i = chambersStart; i <= chambersEnd; i++) {
    string chamberName;
    string strChamberNumber;
    sprintf(strChamberNumber, \"%02d\", i);
    chamberName = strChamberNumber;
    
    int chamberX = x + (xStep * (i - 1)); // substract 1 from chamberWidth to keep original requested width
    
    //import the chamber panel (no changes in the panel shape; position - [0,0])
    string refName = \"refPlotChamber_\" + side + station + ring + \"_\" + i;
    if (shapeExists(refName)) { refName += \"_1\"; }
    dynAppend(references, refName);
    addSymbol(myModuleName(), myPanelName(),
              \"objects/\" + EMUUI_COMPONENT_NAME + \"/refDevice.pnl\",
              refName,
              makeDynString(\"$caption:VALUE\", \"$deviceType:chamber\",
                            \"$deviceParams:\" + \"side=\" + side + 
                                               \";station=\" + station + 
                                               \";ring=\" + ring + 
                                               \";chamberNumber=\" + strChamberNumber,
                            \"$group:\" + paramGroup,
                            \"$shapeParams:\" + \"type=rectangle\" + 
                                              \";width=\" + chamberWidth +
                                              \";height=\" + chamberHeight,
                            \"$refName:\" + refName),
              chamberX, y, 0, 1, 1);
  }
}

void drawRingLabel(int x, int y, string side, int station, int ring) {
    //construct the ring label text
    string ringLabel = \"ME\";
    if (side == \"P\") {
      ringLabel += \"+\";
    } else if (side == \"M\") {
      ringLabel += \"-\";
    }
    ringLabel += station + \"/\" + ring;
    
    // add the label
    string refName = \"ringLabel_\" + ringLabel;
    dynAppend(references, refName);
    addSymbol(myModuleName(), myPanelName(), 
              \"objects/\" + EMUUI_COMPONENT_NAME + \"/refLabel.pnl\", refName, 
              makeDynString(\"$text:\" + ringLabel),
              x, y, 0, 1, 1);
}

void getChambersStartEndParams(string side, int station, int ring, int &chambersStart, int &chambersEnd, dyn_string &exceptionInfo) {
  mapping layoutParams = emuui_getMapping(\"chamberLayout\", exceptionInfo);
  if (emu_checkException(exceptionInfo)) { return; }
  
  chambersStart = -1;
  chambersEnd = -1;
  if (mappingHasKey(layoutParams, \"chambersStart_ME_\" + side + station + ring) &&
      mappingHasKey(layoutParams, \"chambersEnd_ME_\" + side + station + ring)) {
    chambersStart = layoutParams[\"chambersStart_ME_\" + side + station + ring];
    chambersEnd = layoutParams[\"chambersEnd_ME_\" + side + station + ring];
  }
