string paramGroup;
int paramWidth;

// some panel-wide constants
const int EMUUI_EMUPLOT_LABEL_WIDTH = 43;
const int EMUUI_EMUPLOT_GRADIENT_LABEL_WIDTH = 30;
mapping layoutParams;
dyn_string references;
bool runningLocal; // if true then panel is running localy, if false then panel is a reference
dyn_string gradientScaleRefs, gradientScaleLabelRefs;
int gradientScaleX, gradientScaleY;
int height, chamberWidthHeight;

/** coppies dollar parameters to local variables. If any dollar parameter is missing 
   then local variable is given a default value to allow to run the panel separatelly for debugging purposes. */
void initParams() {
  //default values
  if ((strlen($group) == 0) &&
      (strlen($width) == 0)) {
    
    emuui_init();
    runningLocal = true;
    
    paramGroup = emuui_getSessionDp(\"valueMonitor\");
    paramWidth = 1200;
  } else { // copy from dollar params
    runningLocal = false;
    
    paramGroup = $group;
    paramWidth = $width;
  }
}

void modeChangedCB(string modeDp, string mode, string connectionTypeDp, string connectionType) {
  deleteGradientScaleLabels();
  if (strpos(connectionType, \"DP\") >= 0) { // gradient scale is necessary
    dyn_string ex;
    float minValue = emuui_getDpValueRangeMin(\"chamber_\" + mode, ex);
    if (dynlen(ex) > 0) { emu_errorHandled(ex); }
    float maxValue = emuui_getDpValueRangeMax(\"chamber_\" + mode, ex);
    if (dynlen(ex) > 0) { emu_errorHandled(ex); }
    drawGradientScaleLabels(gradientScaleX, gradientScaleY, height + 1, chamberWidthHeight, minValue, maxValue);
  }
}


void drawGradientScale(int bottomLeftX, int bottomLeftY, int height, int width, float minValue, float maxValue) {
  for (int i=0; i < height; i++) {
    string refName = \"gradientScaleLine\" + i;
    if (shapeExists(refName)) { refName += \"_1\"; }
    dynAppend(references, refName);
    dynAppend(gradientScaleRefs, refName);
    addSymbol(myModuleName(), myPanelName(),
              \"objects/\" + EMUUI_COMPONENT_NAME + \"/refLine.pnl\",
              refName,
              makeDynString(),
              bottomLeftX, bottomLeftY - i, 0, 1, 1);
    setValue(refName + \".lineHorizontal\", \"foreCol\", emuui_getGradientColor(i, 0, height));
    setValue(refName + \".lineHorizontal\", \"size\", width, 1);
  }
  
  drawGradientScaleLabels(bottomLeftX, bottomLeftY, height, width, minValue, maxValue);
}

void drawGradientScaleLabels(int bottomLeftX, int bottomLeftY, int height, int width, float minValue, float maxValue) {
  for (int i=0; i < height; i++) {
    // draw values
    float tmp = ((float)i) / 30;
    if ((floor(tmp) == tmp) && (height - i > 15) ||    // draw value every 30 pixels, but don't draw if there's only 15 pixels left to the top - to avoid overlapping with the last value
        (i == height - 1))                             // or if it's the last value
    {
      float value = minValue + ((maxValue - minValue) / ((float)height)) * ((float)i);
      if (i == height -1) { value = maxValue; } // if it's the last one - just set the maxValue to avoid rounding error
      string strValue;
      sprintf(strValue, \"%d\", value);
      // add the label
      string refName = \"valueLabel_\" + strValue;
      dynAppend(references, refName);
      dynAppend(gradientScaleLabelRefs, refName);
      addSymbol(myModuleName(), myPanelName(), 
                \"objects/\" + EMUUI_COMPONENT_NAME + \"/refLabel.pnl\", refName, 
                makeDynString(\"$text:\" + strValue),
                bottomLeftX + width, bottomLeftY - i - 6, 0, 1, 1); // shift a bit up, because the reference point of the label is in bottom left corner
    }
  }
}

void deleteGradientScaleLabels() {
  for (int i=1; i <= dynlen(gradientScaleLabelRefs); i++) {
    removeSymbol(myModuleName(), myPanelName(), gradientScaleLabelRefs[i]);
  }
